<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chariotinstruments.chariotgauge"
    android:versionCode="19"
    android:versionName="1.6.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <supports-screens
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:finishOnTaskLaunch="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait" >
        <activity
            android:name="com.chariotinstruments.chariotgauge.PSensor"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chariotinstruments.chariotgauge.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.BoostActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.ConnectionActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.SettingsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.WidebandActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.OilActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.TwoGaugeActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.FourGaugeActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.TemperatureActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.SingleChartActivity"
            android:noHistory="true" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.DualChartActivity"
            android:noHistory="true" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.QuadChartActivity"
            android:noHistory="true" />
        <activity
            android:name="com.chariotinstruments.chariotgauge.RPMActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.D1" />
    </application>

</manifest>